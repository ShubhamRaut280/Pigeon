<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheet_bg">

    <LinearLayout
        android:id="@+id/layoutCopy"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/renameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_copy"
            app:tint="@color/material_dynamic_primary40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy text"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:clickable="true"
        android:longClickable="true"
        android:id="@+id/layoutDelete"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:focusable="true">


        <ImageView
            android:id="@+id/deleteList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/material_dynamic_primary40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete message for me"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/material_dynamic_primary10"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:clickable="true"
        android:longClickable="true"
        android:id="@+id/layoutSeen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:focusable="true">


        <ImageView
            android:id="@+id/seenMsg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            app:tint="@color/material_dynamic_primary40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent At: "
            android:layout_marginLeft="15dp"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>